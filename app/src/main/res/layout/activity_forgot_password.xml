<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgotpassbackground"
    tools:context=".ui.generalmodule.ForgotPassword">

    <TextView
        android:id="@+id/TVNotification"
        android:layout_width="295dp"
        android:layout_height="58dp"
        android:layout_marginTop="244dp"
        android:fontFamily="@font/cambay_regular"
        android:text="Email sent successfully! Please check your email to reset your password."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassTitle" />

    <TextView
        android:id="@+id/forgotPassHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cambay_bold"
        android:text="Forgot Password?"
        android:textColor="#5D5D5D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassHeader"
        app:srcCompat="@drawable/lock" />

    <TextView
        android:id="@+id/forgotPassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/coiny_regular"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cambay_regular"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassTitle" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="297dp"
        android:layout_height="56dp"
        android:backgroundTint="#DBF1F1"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:hint="Enter your email linked to account"
        android:inputType="textEmailAddress"
        android:textColorHint="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/sendEmailButton"
        android:layout_width="251dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#FFF2E0"
        android:fontFamily="@font/cambay_regular"
        android:text="Send Password Reset Email"
        android:textColor="@color/design_default_color_on_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailField" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFF2E0"
        android:fontFamily="@font/cambay_regular"
        android:text="Back to Sign In"
        android:textColor="@color/design_default_color_on_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>