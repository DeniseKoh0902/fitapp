<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TVTitleGoodJob"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/cambay_bold"
            android:text="Good Job,"
            android:textAlignment="center"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/TVName"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVTitleGoodJob"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/cambay_bold"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/TVSmallDesc"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVCongrats"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/cambay_bold"
            android:text="Youâ€™re one step closer to your fitness goals!"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/BtnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVSmallDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/morepalegreen"
            android:fontFamily="@font/cambay_bold"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/IVCongrats"
            android:layout_width="381dp"
            android:layout_height="200dp"
            android:layout_below="@+id/TVName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/congratulations" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>