<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebackground"
    tools:context=".ui.profile.EditProfile">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/profilepic"
        android:layout_marginTop="100dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/green"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/profilepic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:hint="Username"
        android:inputType="text"
        android:text="            Username"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/usertype"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/username"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:inputType="text"
        android:text="            Bronze"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/usertype"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:inputType="text"
        android:text="            Prefer Not to Say"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/emailadd"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/dob"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:inputType="text"
        android:text="            john@gmail.com"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/emailadd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:inputType="text"
        android:text="            Prefer Not to Say"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/point"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_below="@+id/phone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:fontFamily="@font/cambay_regular"
        android:inputType="text"
        android:text="            0 points"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/profileicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/profilepic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="309dp"
        app:srcCompat="@drawable/profile_icon" />

    <ImageView
        android:id="@+id/usertypeicon"
        android:layout_width="29dp"
        android:layout_height="33dp"
        android:layout_below="@+id/username"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="310dp"
        app:srcCompat="@drawable/usertypeicon" />

    <ImageView
        android:id="@+id/calendaricon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/usertype"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="311dp"
        app:srcCompat="@drawable/calander_icon" />

    <ImageView
        android:id="@+id/mailicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/dob"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="307dp"
        app:srcCompat="@drawable/mail_icon" />

    <ImageView
        android:id="@+id/phoneicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/emailadd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="311dp"
        app:srcCompat="@drawable/phone_icon" />

    <ImageView
        android:id="@+id/coinicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="309dp"
        app:srcCompat="@drawable/coin_icon" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_below="@+id/point"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/cambay_regular"
        android:text="Save"
        android:textColor="#000000"
        app:backgroundTint="#EB7C70" />

    <Button
        android:id="@+id/updateprofilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="110dp"
        android:background="#00000000"
        android:fontFamily="@font/cambay_regular"
        android:text="Change profile picture"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>