<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RLExercise"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_below="@+id/TVExerciseSubTitle"
    android:layout_marginStart="29dp"
    android:layout_marginTop="37dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/border_background_solidpink1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TVExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/coiny_regular"
        android:lineSpacingExtra="5sp"
        android:text="Jogging"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/TVDuration"
        android:layout_width="233dp"
        android:layout_height="26dp"
        android:layout_below="@+id/TVExerciseName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/ImageBg"
        android:fontFamily="@font/cambay_regular"
        android:text="30 minutes"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ImageBg"
        android:layout_width="62dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/bottom_background" />

<ImageView
    android:id="@+id/ImageExercise"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="16dp"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="12dp"
    app:srcCompat="@drawable/jogging" />

    <ImageButton
        android:id="@+id/BtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/baseline_add_circle_outline_24" />

</RelativeLayout>