<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.admin.AdminFeatures">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdminFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/purple"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_below="@+id/toolbarAdminFeatures"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/IVPurpleCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-20dp"
            app:srcCompat="@drawable/cloud_purple" />

        <Button
            android:id="@+id/btnEditExercise"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/btnCheckUserList"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/palepink"
            android:fontFamily="@font/coiny_regular"
            android:text="Edit Exercise"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnViewFeedback"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/btnEditExercise"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/coiny_regular"
            android:text="View Feedback"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnCheckUserList"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/TVAdminFeatures"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/palepurple"
            android:fontFamily="@font/coiny_regular"
            android:text="Check User List"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TVAdminFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/coiny_regular"
            android:gravity="center"
            android:text="Admin Features"
            android:textColor="@color/black"
            android:textSize="35dp" />

    </RelativeLayout>

</RelativeLayout>