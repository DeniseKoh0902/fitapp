<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TVRecordSleepingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Record your sleeping hours"
            android:textSize="25dp"
            android:fontFamily="@font/coiny_regular" />

        <EditText
            android:id="@+id/ETSleepingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/TVRecordSleepingHours"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Sleeping Hours"
            android:textSize="20dp"
            android:fontFamily="@font/cambay_bold"/>

        <Button
            android:id="@+id/BtnRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/ETSleepingHours"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Record"
            android:backgroundTint="@color/green"
            android:textSize="20dp"
            android:fontFamily="@font/cambay_bold"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>