<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.analytics.Analytics">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:background="@color/green"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="806dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/TVAnalytics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:text="Analytics"
            android:textColor="@color/black"
            android:fontFamily="@font/coiny_regular"
            android:textSize="35dp"
            />

        <Button
            android:id="@+id/BtnWeeklyAnalytics"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/TVAnalytics"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/yellow"
            android:text="Weekly Analytics"
            android:textColor="@color/black"
            android:fontFamily="@font/coiny_regular"
            android:textSize="23dp"/>

        <Button
            android:id="@+id/BtnMonthlyAnalytics"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/BtnWeeklyAnalytics"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/paleyellow"
            android:text="Monthly Analytics"
            android:textColor="@color/black"
            android:fontFamily="@font/coiny_regular"
            android:textSize="23dp"/>

        <ImageView
            android:id="@+id/IVDecoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-68dp"
            app:srcCompat="@drawable/orange_cloud" />

        <Button
            android:id="@+id/BtnHealthReport"
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_below="@+id/BtnMonthlyAnalytics"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/morepaleyellow"
            android:text="Health Report"
            android:textColor="@color/black"
            android:fontFamily="@font/coiny_regular"
            android:textSize="23dp"/>

    </RelativeLayout>

</RelativeLayout>